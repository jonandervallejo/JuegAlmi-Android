<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ui.historia.HistoriaFragment">

    <!-- TÃ­tulo de la historia -->
    <TextView
        android:id="@+id/titulo_historia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuestra Historia"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- ScrollView para permitir desplazamiento -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Primer imagen y texto -->
            <ImageView
                android:id="@+id/imagen_historia1"
                android:layout_width="212dp"
                android:layout_height="166dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/tiendahistoria"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/text_historia1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/historia_texto1"
                android:textSize="18sp" />

            <!-- Segunda imagen y texto -->
            <ImageView
                android:id="@+id/imagen_historia2"
                android:layout_width="212dp"
                android:layout_height="166dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/tiendahistoria2"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/text_historia2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/historia_texto2"
                android:textSize="18sp" />

            <!-- Tercera imagen y texto -->
            <ImageView
                android:id="@+id/imagen_historia3"
                android:layout_width="212dp"
                android:layout_height="166dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/tiendahistoria3"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/text_historia3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/historia_texto3"
                android:textSize="18sp" />

            <!-- Espacio al final -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
