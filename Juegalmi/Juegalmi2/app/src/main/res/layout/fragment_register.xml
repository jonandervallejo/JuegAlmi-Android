<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="1">

    <!-- Campo de correo electrónico -->
    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo electrónico"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu correo"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp"/>

    <!-- Campo de nombre -->
    <TextView
        android:id="@+id/nombreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu nombre"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <!-- Campo de primer apellido -->
    <TextView
        android:id="@+id/apellido1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primer apellido"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/apellido1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu primer apellido"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <!-- Campo de segundo apellido -->
    <TextView
        android:id="@+id/apellido2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segundo apellido"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/apellido2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu segundo apellido"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <!-- Campo de contraseña -->
    <TextView
        android:id="@+id/contrasenaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/contrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu contraseña"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"/>

    <!-- Botón de registro -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/black"/>

</LinearLayout>
